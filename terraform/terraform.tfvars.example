# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your deployment

# GCP Configuration
project_id = "nava-labs"
region     = "us-central1"
zone       = "us-central1-c"

# Domain Configuration (optional)
# If you have a custom domain, uncomment and set these:
# domain_name = "your-domain.com"
# enable_dns  = true

# GitHub Repository
github_repository = "navapbc/labs-asp"

# Cloud Run Configuration
cloud_run_cpu         = "2000m"  # 2 vCPUs for browser + Node.js
cloud_run_memory      = "4Gi"    # 4GB RAM for Chrome processes
cloud_run_timeout     = 3600     # 60 minutes for long automations
cloud_run_max_instances = 100
cloud_run_min_instances = 0

# Load Balancer (set to false when using Cloud Run URLs only)
enable_load_balancer = false

# DNS (only enable if you have a custom domain)
enable_dns = false
